@page "/Paypal"
<h3>Paypal</h3>
<p>Paying @amount.ToString("c") for a @itemName</p>
<form action="https://www.sandbox.PayPal.com/cgi-bin/webscr" method="post">

    <input type="hidden" name="cmd" value="_xclick" />
    <input type="hidden" name="business" value="rgarner011235-facilitator@gmail.com" />

    <input type="hidden" name="item_name" value="@itemName" />
    <input type="hidden" name="amount" value="@amount" />
    <input type="hidden" name="return" value="https://localhost:7237/PaypalComplete"
    <input type="submit" value="Buy!" />

</form>

@code {
    double amount = 10.00;
    string itemName = "My painting";

}
